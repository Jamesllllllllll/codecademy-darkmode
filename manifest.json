{
  "manifest_version": 3,
  "name": "Codecademy Dark Mode",
  "version": "1.0.125",
  "description": "A dark mode skin for the Codecademy learning platform. Updated June 20, 2024.",
  "author": "James Keezer",
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "host_permissions": [
    "http://www.codecademy.com/*",
    "https://www.codecademy.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.codecademy.com/*"],
      "exclude_matches": [
        "*://discuss.codecademy.com/*",
        "*://try.codecademy.com/*",
        "*://*.codecademy.com/resources/blog/*"
      ],
      "js": ["./JS/add-classes.js"],
      "css": [
        "./CSS/account.css",
        "./CSS/achievements.css",
        "./CSS/articles.css",
        "./CSS/career-center.css",
        "./CSS/career-journey.css",
        "./CSS/catalog.css",
        "./CSS/cheatsheets.css",
        "./CSS/code-editor.css",
        "./CSS/dropdowns.css",
        "./CSS/enrolled-courses.css",
        "./CSS/for-teams.css",
        "./CSS/globals.css",
        "./CSS/header.css",
        "./CSS/home.css",
        "./CSS/lessons.css",
        "./CSS/my-learning.css",
        "./CSS/popups.css",
        "./CSS/profile.css",
        "./CSS/projects-workspaces.css",
        "./CSS/quizzes.css",
        "./CSS/signed-out.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
